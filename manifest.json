{
  "manifest_version": 3,
  "name": "SLT Usage Meter Pro",
  "version": "0.0.1",
  "description": "Detailed usage meter for SLT Broadband",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon19.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon19.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
