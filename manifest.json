{
  "manifest_version": 3,
  "name": "SLT Usage Meter Pro",
  "version": "0.0.1",
  "description": "Detailed usage meter for SLT Broadband",
  "host_permissions": [
    "*://myslt.slt.lk/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon19.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://myslt.slt.lk/boardBand/summary"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "contentScript.css"
      ]
    }
  ]
}
